---
const { title, slug, cover, date, location } = Astro.props;
---

<a href={`/exhibitions/${slug}`} class="block">
    <div class="aspect-[1.3] w-80">
        <div class="relative w-full h-full group overflow-hidden">
            <img
                src={cover.src}
                alt={title}
                class="w-full h-full object-cover object-center"
            />

            <div
                class="absolute inset-0 bg-black/15 opacity-0
                    group-hover:opacity-100 transition-opacity"
            />
        </div>
    </div>
    <div class="py-4">
        <p class="italic text-md text-stone-600">{title}</h2>
        <p class="text-sm text-stone-500">{date}</h2>
        <p class="text-sm text-stone-400">{location}</h2>
    </div>
</a>
