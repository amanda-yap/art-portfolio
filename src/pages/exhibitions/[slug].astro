---
import Layout from '../../layouts/Layout.astro';
import { exhibitions } from '../../data/exhibitions';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
	// Map each exhibition to a path
	return exhibitions.map(ex => ({
		params: { slug: ex.slug },
		props: { exhibition: ex } 
	}));
}

const { exhibition } = Astro.props;
---
<Layout>
    <main class="mx-auto p-2 lg:p-6">
		<h1 class="text-3xl font-semibold mb-4 mt-4">{exhibition.title}</h1>
		<h3 class="italic">{exhibition.location}</h3>
		<h3>{exhibition.date}</h3>
		<p class="mt-6 mb-6">{exhibition.description}</p>

		<div class="grid gap-4 grid-cols-1 md:grid-cols-2">
			{exhibition.images.map((image) => (
				<div class="flex flex-col">
					<Image
						src={image.src}
						alt={exhibition.title}
						class="w-full"
					/>
					<p class="mt-2 text-sm">
						{image.description}
					</p>
				</div>
			))}
		</div>
    </main>
</Layout>