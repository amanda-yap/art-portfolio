---
import Layout from './../layouts/Layout.astro';
---

<Layout>
    <h1 class="text-2xl font-bold mb-4 mt-6">Contact</h1>
    <p class="mb-6">Feel free to message me on <a href="#" class="underline">Instagram</a>, 
        <a href="#" class="underline">email</a>, or use this form!</p>

    <form action="#" method="POST" class="space-y-4 max-w-md">
        <div>
            <label for="name" class="block font-medium mb-1">Name</label>
            <input type="text" id="name" name="name" required
                class="w-full border border-stone-300 p-2 focus:outline-none" />
        </div>

        <div>
            <label for="email" class="block font-medium mb-1">Email</label>
            <input type="email" id="email" name="email" required
                class="w-full border border-stone-300 p-2 focus:outline-none" />
        </div>

        <div>
            <label for="message" class="block font-medium mb-1">Message</label>
            <textarea id="message" name="message" required rows="4"
                    class="w-full border border-stone-300 p-2 focus:outline-none"></textarea>
        </div>

        <button type="submit"
                class="w-half font-semibold py-2 px-4 border border-solid border-stone-700 cursor-pointer"
                id= "highlights">
            Send
        </button>
    </form>
</Layout>